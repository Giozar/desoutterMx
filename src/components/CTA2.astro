---
const {title, subtitle, btn1, href1} = Astro.props;
---
<section class="mx-auto max-w-7xl px-8 py-12 bg-slate-50">
    <header>
      <h4 class="text-xl font-bold text-zinc-900">
        {title}
      </h4>
    </header>
    <article class="mb-4">
      <p class="text-base font-semibold text-gray-600">
        {subtitle}
      </p>
    </article>
    <div class="mt-8">
      <a href={import.meta.env.BASE_URL + href1} class="bg-red-600 hover:bg-red-400 px-2 py-4 text-white font-medium text-lg">
        {btn1}
      </a>
    </div>
  </section>