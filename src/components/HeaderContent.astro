---
export interface Props {
  title: string
  description?: string
  image?: ImageMetadata
}

const { title, description, image } = Astro.props
---

<section
  class='relative mx-auto w-full max-w-screen-xl bg-white from-slate-600 dark:bg-gradient-to-t max-[705px]:my-5 my-10'
>
  <article class='grid h-full grid-cols-3 max-[1124px]:grid-cols-2 max-[705px]:grid-cols-1'>
    <figure class='flex items-center justify-center h-full w-full'>
      {
        image && (
          <img src={image} alt={title} class='object-contain h-full w-full' />
        )
      }
    </figure>
    <section
      class='top-0 z-20 flex w-full justify-center bg-white bg-opacity-10 p-4 col-span-2 max-[1124px]:col-span-1 max-[705px]:order-first'
    >
      <div class='flex items-center justify-center'>
        <header>
          <h2 class='border-b border-red-500 lg:text-lg xl:text-3xl font-bold leading-tight text-black'>
            {title}
          </h2>
          <p class='text-sm font-medium text-slate-800'>{description}</p>
        </header>
      </div>
      <slot />
    </section>
  </article>
</section>
