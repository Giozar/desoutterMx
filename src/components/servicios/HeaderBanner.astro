---
export interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<section class="relative mx-auto h-[300px] w-full max-w-screen-xl md:my-10 sm:h-[300px] md:h-full">
  <header class=" left-0 top-0 z-20 w-full bg-white bg-opacity-10">
    <div class="pt-4 pl-4">
      <h2
        class="border-b border-red-500 text-base lg:text-4xl font-bold leading-tight text-black"
      >
        {title}
      </h2>
      <h3 class="text-sm font-medium text-slate-800">{subtitle}</h2>
    </div>
    <slot />
  </header>
</section>
