      </p>
    </div>

    <div class='pt-10'>
      <dl class='grid md:grid-cols-2 xl:grid-cols-4 md:space-y-0'>
        {
          services.map((service) => (
            <div class='relative p-10 border dark:border-gray-700'>
              <figure class="mb-8">
                <img loading="lazy" src={service.image} alt={service.name} />
              </figure>
              <dt>
                <p class='text-lg font-medium leading-6 text-gray-900 dark:text-gray-200 '>
                  {service.name}
                </p>
              </dt>
              <dd class='mt-2 text-base dark:text-gray-400'>
                <p class="md:hidden">
                  {service.shortDescription}
                </p>
                <p class="hidden md:block xl:hidden">
                  {service.averageDescription}
                </p>
                <p class="hidden xl:block">
                  {service.description}
                </p>
              </dd>
            </div>
          ))
