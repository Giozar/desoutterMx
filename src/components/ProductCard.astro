---
const { product } = Astro.props;
const {categoryId, categoryName, subcategoryId, subcategoryName} = Astro.params;
---

<section class="group relative overflow-hidden bg-white w-11/12 h-64">
  <figure class="z-0">
    <div class="flex justify-center">
      <picture>
        <img src={product.image} alt={product.Modelo} class="scale-150">
      </picture>
    </div>
    <a href={`${import.meta.env.BASE_URL}herramientas/${categoryId}/${categoryName}/${subcategoryId}/${subcategoryName}/p/${product.Referencia}/${product.pathName}`} title="Herramientas de montaje de baterÃ­a">
      <figcaption
        class="absolute top-0 z-20 grid w-full translate-y-48 gap-y-2 border-t border-red-600 bg-white bg-opacity-90 transition-transform duration-300 group-hover:-translate-y-0 group-hover:opacity-100"
      >
        <header class="px-5 w-full text-center">
          <h3 class="font-bold text-gray-700">{product.Modelo} {product.Referencia}</h3>
        </header>
        <p class="pt-5">
          <ul class="flex flex-col justify-center items-center">
            {Object.keys(product).slice(2,5).map((clave) => (
              <li key={clave} class="text-sm font-semibold text-gray-600">
                {clave}: {product[clave]}
              </li>
            ))}
          </ul>
          <div></div>
        </p>
        <legend
          class="mb-2 h-8 justify-self-center bg-red-600 px-6 py-1 text-center text-sm font-semibold text-white"
          >Mas informacion</legend
        >
      </figcaption>
    </a>
  </figure>
</section>
