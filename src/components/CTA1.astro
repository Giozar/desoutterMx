---
const {title, subtitle, btn1, btn2, href1, href2} = Astro.props;
---

<div class="bg-slate-50 dark:bg-gray-800">
  <div
    class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:flex lg:items-center lg:justify-between lg:px-8 lg:py-16">
    <h6 class="text-3xl font-extrabold tracking-tight text-gray-900 dark:text-gray-100 sm:text-4xl">
      <span class="block dark:text-white">{title}</span>
      <span class="block text-red-600 dark:text-red-300"
        >{subtitle}
      </span>
    </h6>
    <div class="mt-8 flex lg:mt-0 lg:flex-shrink-0">
      <div class="inline-flex shadow">
        <a
          href={"/" + href1}
          class="inline-flex items-center justify-center border border-transparent bg-red-600 px-5 py-3 text-base font-medium text-white hover:bg-red-400">
          {btn1}
        </a>
      </div>
      <div class="ml-4 inline-flex shadow lg:ml-3">
        <a
          href={"/" + href2}
          class="inline-flex items-center justify-center border border-transparent bg-white px-5 py-3 text-base font-medium text-red-600 hover:bg-red-100">
          {btn2}
        </a>
      </div>
    </div>
  </div>
</div>
