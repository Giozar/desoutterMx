---
const {productAttributes} = Astro.props;
---
<nav>
    <div class="max-[500px]:text-sm text-lg text-slate-500 dark:text-white ">
      <a class="border-b text-red-500 border-red-500 hover:text-gray-600 hover:border-gray-600 dark:hover:text-red-300 dark:hover:border-red-300" 
      href=`${import.meta.env.BASE_URL}`>Inicio</a> /
      <a class="border-b text-red-500 border-red-500 hover:text-gray-600 hover:border-gray-600 dark:hover:text-red-300 dark:hover:border-red-300" 
      href=`${import.meta.env.BASE_URL}herramientas`>Herramientas</a> /
      <a class="border-b text-red-500 border-red-500 hover:text-gray-600 hover:border-gray-600 dark:hover:text-red-300 dark:hover:border-red-300" 
      href=`${import.meta.env.BASE_URL}herramientas/${productAttributes.categoryId}/${productAttributes.categoryName}`>{productAttributes.categoryName}</a> /
      <a class="border-b text-red-500 border-red-500 hover:text-gray-600 hover:border-gray-600 dark:hover:text-red-300 dark:hover:border-red-300" 
      href=`${import.meta.env.BASE_URL}herramientas/${productAttributes.categoryId}/${productAttributes.categoryName}/${productAttributes.subcategoryId}/${productAttributes.subcategoryName}`>{productAttributes.subcategoryName}</a> /
      <span class="max-[500px]:text-sm text-lg">{productAttributes.productModelo}</span>
    </div>
</nav>