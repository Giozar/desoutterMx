import IndustrySector from "./IndustrySector.astro";
const listIndustrySectors = [
    {
        name: "Industria Automotriz",
        description: "Las herramientas Desoutter impulsan la producción de vehículos en la industria automotriz de México, un pilar económico crucial.",
        image: "https://s3.amazonaws.com/desumex.com.mx/industrias/industria-automotriz.avif"
    },
    {
        name: "Tecnología y Herramientas para la Manufactura Electrónica",
        description: "México lidera la fabricación de productos electrónicos con la esencial contribución de herramientas Desoutter.",
        image: "https://s3.amazonaws.com/desumex.com.mx/industrias/industria-electronica.avif"
    },
    {
        name: "Herramientas para la Energía Renovable",
        description: "Las herramientas industriales de Desoutter respaldan la producción de energía renovable en México, en línea con las inversiones en energías limpias",
        image: "https://s3.amazonaws.com/desumex.com.mx/industrias/industria-energetica.avif"
    },
    {
        name: "Industria Aeronáutica ",
        description: "La industria  aeronáutica  está en crecimiento. Las herramientas Desoutter son esenciales para mantener altos estándares en la producción y el mantenimiento de aeronaves.",
