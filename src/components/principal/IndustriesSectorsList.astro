    <ul class="grid justify-items-center grid-cols-1 lg:grid-cols-2 gap-4 lg:gap-10 p-3 max-w-full">
        {listIndustrySectors.map((industrySector)=>(
            <li class="flex justify-center">
                <IndustrySector industrySector={industrySector}  />
            </li>
        ))}
    </ul>
</div>