---
import Base from "../layouts/Base.astro";
import CarouselContainer from "../components/principal/CarouselContainer.astro";
import IndustriesSectorsList from "../components/principal/IndustriesSectorsList.astro";
import CTA1 from "../components/CTA1.astro";
import SliderTools from "@components/herramientas/SliderTools.astro"

const frontmatter = {
  title: "Desoutter Tools México | Herramientas Industriales",
  description: 
    "Desoutter Tools México: herramientas industriales y soluciones de ensamblaje avanzadas. Ofrecemos una amplia gama de herramientas eléctricas de precisión, torque, neumáticas e inalámbricas para la industria automotriz y aeronáutica, además de servicios especializados.",
  keywords: [
    "Desoutter Tools México", "Herramientas Industriales", "Soluciones de Ensamblaje", "Herramientas Eléctricas", "Innovación Industrial", 
    "Fabricación de Precisión", "Automatización de Procesos", "Tecnología Industrial", "Eficiencia en Ensamblaje", "Productividad Industrial"
  ],
  authorName: "Desumex",
  language: "es",
  canonicalUrl: Astro.url.href,
  facebookTitle: "Desoutter Tools México | Herramientas Industriales",
  facebookDescription: "Desoutter Tools México: herramientas industriales y soluciones de ensamblaje avanzadas. Ofrecemos una amplia gama de herramientas eléctricas de precisión, torque, neumáticas e inalámbricas para la industria automotriz y aeronáutica, además de servicios especializados.",
  facebookImage: "https://s3.amazonaws.com/desumex.com.mx/bannerIndustriesTools.png",
  facebookURL: Astro.url.href,
  twitterTitle: "Desoutter Tools México | Herramientas Industriales",
  twitterDescription: "Desoutter Tools México: herramientas industriales y soluciones de ensamblaje avanzadas. Ofrecemos una amplia gama de herramientas eléctricas de precisión, torque, neumáticas e inalámbricas para la industria automotriz y aeronáutica, además de servicios especializados.",
  twitterImage: "https://s3.amazonaws.com/desumex.com.mx/bannerIndustriesTools.png"
}

---

<Base frontmatter={frontmatter}>
  <section class="flex justify-center my-7 mx-4">
    <article class="w-full h-auto sm:w-[690px] md:w-[720px] lg:w-[940px] xl:w-[1142px] shadow-[0px_0px_10px_0px_rgba(0,0,0,0.3)] bg-white dark:bg-gray-800">
      <CarouselContainer />
    </article>
  </section>

  <section class="flex justify-center my-7 mx-4">
    <article class="w-full h-auto sm:w-[690px] md:w-[720px] lg:w-[940px] xl:w-[1142px] shadow-[0px_0px_10px_0px_rgba(0,0,0,0.3)] bg-white dark:bg-gray-800">
      <SliderTools />
    </article>
  </section>

  <section class="flex justify-center my-7 mx-4 ">
    <article class="w-full sm:w-[690px] md:w-[720px] lg:w-[940px] xl:w-[1142px] shadow-[0px_0px_10px_0px_rgba(0,0,0,0.3)] bg-white dark:bg-gray-800">
      <CTA1 title="La industria y servicios que necesitas" subtitle="Todo lo que buscas en Desumex" 
            btn1="Cotizar"
            btn2="Contáctanos"
            href1="contacto/cotizar"
            href2="contacto"
      />
    </article>
  </section>

  <section class="flex justify-center my-7 mx-4">
    <article class="w-full sm:w-[690px] md:w-[720px] lg:w-[940px] xl:w-[1142px] shadow-[0px_0px_10px_0px_rgba(0,0,0,0.3)] bg-white dark:bg-gray-800">
      <IndustriesSectorsList />
    </article>
  </section>

  

  <section class="flex justify-center my-7 mx-4 ">
    <article class="w-full sm:w-[690px] md:w-[720px] lg:w-[940px] xl:w-[1142px] shadow-[0px_0px_10px_0px_rgba(0,0,0,0.3)] bg-white dark:bg-gray-800">
      <CTA1 title="¿Necesitas herremientas?" subtitle="Busca y obtiene todo lo que necesitas." 
            btn1="Cotizar"
            btn2="Contáctanos"
            href1="contacto/cotizar"
            href2="contacto"
      />
    </article>
  </section>
</Base>
