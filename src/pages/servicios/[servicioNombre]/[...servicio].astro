---
import { getEntry } from "astro:content";
import Base from "../../../layouts/Base.astro";
import HeaderContent from "../../../components/servicios/HeaderContent.astro";
import Accordion from '../../../components/servicios/Accordion.astro'

const { servicioNombre } = Astro.params;

const detail = await getEntry("servicio", servicioNombre!);

const frontmatter = {
  title: detail!.data.title,
  description: detail!.data.description,
  keywords: ["Palabra Clave 1", "Palabra Clave 2", "Palabra Clave 3"],
  name: "Desumex",
  language: "es",
  url: "URL_can칩nica_de_la_P치gina",
  facebookTitle: detail!.data.title,
  facebookDescription: detail!.data.description,
  facebookImage: detail!.data.image,
  facebookURL: "URL_can칩nica_de_la_P치gina_para_Facebook",
  twitterTitle: detail!.data.title,
  twitterDescription: detail!.data.description,
  twitterImage: detail!.data.image
}

const serviceDetails = {
  title: detail!.data.title.toLocaleUpperCase(),
  description: detail!.data.description,
  image: detail!.data.image,
  qya: detail!.data.qya,
};

---

<Base frontmatter={frontmatter}>
  <header class="pt-10 mx-2 w-full">
    <div class="max-[300px]:text-xs max-[500px]:text-sm text-slate-500 mx-auto w-full max-w-screen-xl">
      <a class="border-b-2 text-red-500 border-red-500 hover:text-gray-600 hover:border-gray-600" 
      href={import.meta.env.BASE_URL+"servicios"}>Regresar a servicios</a>/<span>{frontmatter.title}</span>
    </div>
    <HeaderContent
      title={serviceDetails.title}
      description={serviceDetails.description}
      image={serviceDetails.image}
    />
  </header>
  <section class="pt-10 mx-2 dark:bg-gray-900 w-full mb-10">
    <Accordion qya={serviceDetails.qya} />
  </section>
</Base>
