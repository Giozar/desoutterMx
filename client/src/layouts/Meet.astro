---
import type { CollectionEntry } from 'astro:content'
import Base from '../layouts/Base.astro'
import NextPrev from '../components/NextPrev.astro'


export interface Props {
  prev?: CollectionEntry<'meetUs'>
  next?: CollectionEntry<'meetUs'>
}

const {prev, next, frontmatter } = Astro.props
---

<Base frontmatter={frontmatter}>
  <main class="dark:bg-black">
    <article class="post">
      <header>
        <h3>Hola!!</h3>
      </header>
      <section
        class="prose prose-purple mx-auto my-8 max-w-screen-lg px-4 dark:prose-invert lg:prose-xl lg:px-0">
        <slot />
      </section>
    </article>
  </main>
  <NextPrev
    slot="before-footer"
    base={import.meta.env.BASE_URL + 'meetUs/'}
    prev={prev}
    next={next}
  />
</Base>
