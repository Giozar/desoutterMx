---
import { ViewTransitions } from 'astro:transitions'
import { IconDesumexSVG } from '../config'
import { IconDesumexIco } from '../config'

import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'


const { frontmatter } = Astro.props
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="Content-Security-Policy" content="default-src * 'unsafe-eval' 'unsafe-inline' data:; font-src * data:; object-src 'none'; img-src * data:">
    <meta http-equiv="Referrer-Policy" content="no-referrer, strict-origin-when-cross-origin">
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href={IconDesumexIco} sizes="any" />
    <link rel="icon" href={IconDesumexSVG} type="image/svg+xml" />
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />
    <script is:inline>
      const setDarkMode = () => {
        if (
          localStorage.theme === 'dark' ||
          (!('theme' in localStorage) &&
            window.matchMedia('(prefers-color-scheme: dark)').matches)
        ) {
          document.documentElement.classList.add('dark')
        } else {
          document.documentElement.classList.remove('dark')
        }
      }
      setDarkMode() //initial navigation
      document.addEventListener('astro:after-swap', setDarkMode) // Runs on view transitions navigation
    </script>
    <style is:inline>
      [x-cloak] { display: none !important; }
      .markmap > svg {
        width: 100%;
        height: 400px;
      }
      </style>
    <slot name="in-head" />
    </head>
    <body class="dark:bg-gray-900">
      <Header />
      <slot />
      <slot name="before-footer" />
      <Footer />
  </body>
</html>
