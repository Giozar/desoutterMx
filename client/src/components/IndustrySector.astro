---
const { industrySector } = Astro.props;
---

<section
  class="max-w-sm bg-white border border-gray-200 shadow dark:bg-gray-800 dark:border-gray-700 group relative overflow-hidden"
>
  <figure>
    <img
      loading="lazy"
      class="group-hover:scale-110 w-full h-full transition-transform duration-300 object-cover"
      src={industrySector.image}
      alt={industrySector.name}
    />
  </figure>
  <div class="p-5">
    <h5
      class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
    >
      {industrySector.name}
    </h5>

    <p class="mb-3 font-normal text-gray-700 dark:text-red-200">
      {industrySector.description}
    </p>
  </div>
</section>
