---
export interface Props {
  title: string;
  description?: string;
  image?: ImageMetadata;
}

const { title, description, image } = Astro.props;
---

<div class="relative mx-auto h-[300px] w-full max-w-screen-xl bg-white md:my-10 sm:h-[300px] md:h-full">
  <div class="absolute bottom-0 left-0 z-10 h-full w-full"></div>
  <div class="absolute left-0 top-0 z-20 w-full bg-white bg-opacity-10">
    <div class="pt-4 pl-4">
      <h2
        class="border-b border-red-500 text-base lg:text-4xl font-bold leading-tight text-black"
      >
        {title}
      </h2>
      <h3 class="text-sm font-medium italic text-slate-800">{description}</h2>
    </div>
    <slot />
  </div>
  {
    image && (
      <figure class="w-full h-full">
        <img
          src={image.src}
          alt={title}
          class="top-0 h-full w-full z-0 object-cover pt-10"
        />
      </figure>
    )
  }
</div>
