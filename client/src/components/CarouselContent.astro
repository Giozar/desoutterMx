---
const { content } = Astro.props
---

<div class='flex justify-center  items-center mb-16 w-full h-full rounded bg-white bg-opacity-90 p-5'>
  <section>
    <h1 class='text-left text-2xl font-bold tracking-tight text-zinc-800'>
      <span class='text-black'>{content.title}</span>
    </h1>
    <p class='mt-3 text-lg text-black'>
      {content.description}
    </p>
  
    <!-- actions -->
  
    <div class='mt-5 md:flex md:space-x-2 md:justify-center'>
      <div class='p-2'>
        <a
          href={content.actions[0].ref}
          class='flex w-full items-center justify-center px-2 border border-transparent bg-red-600 text-base font-medium text-white hover:bg-red-400 dark:bg-slate-700 dark:text-white dark:hover:bg-slate-900'
        >
          {content.actions[0].name}
        </a>
      </div>
      <div class='p-2'>
        <a
          href={content.actions[1].ref}
          class='flex w-full items-center justify-center px-2 border border-transparent bg-zinc-600 text-base font-medium text-white hover:bg-zinc-500 dark:bg-red-700 dark:text-white dark:hover:bg-red-900'
          rel='noopener noreferrer'
        >
          {content.actions[1].name}
        </a>
      </div>
    </div>
  </section>
</div>
