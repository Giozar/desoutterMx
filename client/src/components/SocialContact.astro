---
import { getCollection } from "astro:content";
import { Icon } from "astro-icon";

const social = await getCollection("social");
---

<section id="socialContact">
  <div class="block bg-white dark:bg-gray-900 lg:my-8">
    <div class="flex flex-wrap">
      <div class="w-full shrink-0 grow-0 basis-auto">
        <div class="flex flex-wrap">
          {
            social.map(
              (method) =>
                method.data.link && (
                  <div class="mb-5 w-full basis-auto md:w-6/12 lg:w-full xl:w-6/12">
                    <div class="flex">
                      <div class=" flex justify-start m-2 ml-4">
                        <Icon
                          pack="bi"
                          name={method.data.icon}
                          class="flex h-14 w-14 items-center justify-center rounded-md bg-red-600 p-4 text-white shadow-md"
                        />
                      </div>
                      <div class="mx-4 flex items-center">
                        <p class="mb-1 font-bold">{method.data.name}</p>
                      </div>
                    </div>

                    <p>
                      <a
                        href={method.data.link}
                        class="text-red-600 hover:text-slate-600 dark:text-red-300 dark:hover:text-white m-2 ml-4"
                      >
                        {method.data.link}
                      </a>
                    </p>
                  </div>
                )
            )
          }
        </div>
      </div>
    </div>
  </div>
</section>
