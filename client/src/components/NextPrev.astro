---
import type { CollectionEntry } from 'astro:content'

export interface Props {
  base: string
  prev: CollectionEntry<'meetUs'> | undefined
  next: CollectionEntry<'meetUs'> | undefined
}

const { base, prev, next } = Astro.props
---

<dl class="mt-12 flex justify-between border-t border-red-300 pt-6 dark:border-red-700">
  {
    prev && (
      <div class="mr-auto text-left">
        <dt class="font-display text-sm font-medium text-gray-800 dark:text-gray-200">Anterior</dt>
        <dd class="mt-1">
          <a
            class="text-base font-semibold text-red-600 hover:bg-red-200 dark:hover:text-slate-800 hover:text-slate-800 dark:text-red-400"
            href={base + prev.slug}>
            <span aria-hidden="true">←</span>
            {prev.data.title}
          </a>
        </dd>
      </div>
    )
  }
  {
    next && (
      <div class="ml-auto text-right">
        <dt class="font-display text-sm font-medium text-gray-800 dark:text-gray-200">Siguiente</dt>
        <dd class="mt-1">
          <a
            class="text-base font-semibold text-red-600 hover:bg-red-200 hover:text-slate-800 dark:hover:text-slate-800 dark:text-red-400"
            href={base + next.slug}>
            {next.data.title}
            <span aria-hidden="true">→</span>
          </a>
        </dd>
      </div>
    )
  }
</dl>
