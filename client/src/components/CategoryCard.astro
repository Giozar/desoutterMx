---
import { Icon } from "astro-icon";
const { category } = Astro.props;
export const prerender = true;

const regex = /\/\d+\//;
const modifiedHref = category.href.replace(regex, `/${category.id}/`);
console.log(modifiedHref);
---

<section class="group relative overflow-hidden bg-white w-11/12 h-64">
  <figure class="z-0">
    <div class="flex justify-center">
      <Icon pack="bi" name="map" class="w-36 h-36" />
    </div>
    <a href={modifiedHref} title={category.name}>
      <figcaption
        class="absolute top-0 z-20 grid h-full w-full translate-y-48 gap-y-2 border-t border-red-600 bg-white bg-opacity-90 transition-transform duration-300 group-hover:-translate-y-0 group-hover:opacity-100"
      >
        <header class="px-5">
          <h3 class="text-center font-bold text-gray-700">{category.name}</h3>
        </header>
        <p class="p-2 pt-10 text-center text-sm text-gray-600">
          {category.description}
        </p>
        <legend
          class="mb-2 h-8 justify-self-center bg-red-600 px-6 py-1 text-center text-sm font-semibold text-white"
          >Mas informacion</legend
        >
      </figcaption>
    </a>
  </figure>
</section>
